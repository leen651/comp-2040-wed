def parse_people_data(data):
    people = data.split("|")
    result = []
    for person in people:
        person_dict = {}
        attributes = person.strip().split(",")
        for attr in attributes:
            if ":" in attr:
                key, value = attr.split(":", 1)
                person_dict[key.strip().lower()] = value.strip()
        result.append(person_dict)
    return result


